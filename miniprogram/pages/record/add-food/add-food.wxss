/* 全局容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #FFF5F7;
  color: #5D4037;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

/* 头部样式 */
.header {
  background-color: #FFCDD2;
  padding: 15px;
  text-align: center;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.header-title {
  font-size: 18px;
  font-weight: bold;
  color: #E91E63;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  padding: 20px;
  width: calc(100% - 40px);
}

/* AI输入区域 */
.ai-input-section {
  background-color: white;
  border-radius: 20px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.05);
  border: 2px solid #FFE0E5;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.title-icon {
  margin-right: 10px;
  font-size: 20px;
}

.title-text {
  color: #D81B60;
  font-size: 16px;
  font-weight: bold;
}

.ai-textarea {
  width: 100%;
  height: 100px;
  padding: 12px;
  border: 2px solid #FFE0E5;
  border-radius: 15px;
  font-size: 14px;
  color: #5D4037;
  margin-bottom: 10px;
  box-sizing: border-box;
}

.ai-submit-btn {
  background-color: #FF4081;
  color: white;
  border: none;
  border-radius: 20px;
  padding: 10px 0;
  font-weight: bold;
  width: 100%;
  font-size: 16px;
}

/* 食物列表区域 */
.food-list {
  background-color: white;
  border-radius: 20px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.05);
  border: 2px solid #FFE0E5;
}

.food-item {
  padding: 15px;
  border-radius: 15px;
  background-color: #FFF5F7;
  margin-bottom: 15px;
}

.food-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
  padding-bottom: 10px;
  border-bottom: 1px dashed #FFE0E5;
}

.food-name {
  font-weight: bold;
  color: #D81B60;
  flex: 1;
  margin-right: 10px;
  padding: 8px 12px;
  border: 1px solid #FFE0E5;
  border-radius: 10px;
  font-size: 14px;
  background-color: white;
}

.food-actions {
  display: flex;
}

.food-action-btn {
  background: none;
  border: none;
  font-size: 20px;
  padding: 0;
  margin: 0;
  line-height: 1;
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.food-action-btn::after {
  border: none;
}

.food-details {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.food-detail-item {
  display: flex;
  align-items: center;
}

.food-detail-label {
  color: #795548;
  margin-right: 12px;
  font-size: 14px;
  width: 60px;
}

.food-detail-input {
  width: 180px;
  padding: 8px 12px;
  border: 1px solid #FFE0E5;
  border-radius: 10px;
  text-align: left;
  background-color: white;
  font-size: 14px;
}

.food-detail-tip {
  font-size: 12px;
  color: #BDBDBD;
  margin-top: 4px;
  margin-left: 72px;
}

/* 手动添加按钮 */
.add-manual-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15px;
  background-color: #F8BBD0;
  color: #D81B60;
  border: none;
  border-radius: 15px;
  margin-top: 20px;
  width: 100%;
  font-weight: bold;
}

.add-manual-btn::after {
  border: none;
}

.add-icon {
  margin-right: 8px;
  font-size: 18px;
}

/* 底部按钮 */
.bottom-buttons {
  display: flex;
  justify-content: space-between;
  gap: 15px;
  margin-top: 20px;
}

.bottom-btn {
  flex: 1;
  padding: 10px 0;
  border-radius: 20px;
  font-weight: bold;
  font-size: 16px;
}

.back-btn {
  background-color: white;
  color: #D81B60;
  border: 2px solid #FFE0E5;
}

.save-btn {
  background-color: #FF4081;
  color: white;
  border: none;
}

.bottom-btn::after {
  border: none;
}

/* 加载动画 */
.loading {
  text-align: center;
  color: #BDBDBD;
  padding: 20px;
}

.loading-icon {
  font-size: 24px;
  display: block;
  margin-bottom: 10px;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 